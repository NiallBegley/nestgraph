<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Name long</th>
      <th>Is online</th>
      <th>Can cool</th>
      <th>Can heat</th>
      <th>Last connection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.name_long %></td>
        <td><%= device.is_online %></td>
        <td><%= device.can_cool %></td>
        <td><%= device.can_heat %></td>
        <td><%= device.last_connection %></td>
        <td><%= link_to 'Show', records_path(:device_id => device.device_id) %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Refresh Device List', refresh_devices_path %>
